{{!< default}}

{{#post}}

{{> "menu"}}

<header class="main-header {{#if @blog.cover_image}}" style="background-image: url({{@blog.cover_image}}){{else}}no-cover{{/if}}">
	<figure class="logo">
		{{#if @blog.logo}}<a href="{{@blog.url}}"><img class="img-logo" src="{{@blog.logo}}" alt="Logo Blog"></a>{{/if}}
	</figure>
	<div class="title">
		<a href="{{@blog.url}}">
			<h1>{{@blog.title}}</h1>
		</a>
		<p>{{@blog.description}}</p>
	</div>
</header>

<section class="posts">

	<article class="{{post_class}}">
		<div class="inner">
			<header class="header-post">
				<h2 class="title-post">{{{title}}}</h2>
			</header>

			<section class="content-post">
				{{content}}
			</section>

			{{/post}}

		</div>
	</article>

</section>
