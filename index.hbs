{{!< default}}

{{> "menu"}}

<header class="main-header {{#if @site.cover_image}}" style="background-image: url({{@site.cover_image}}){{else}}no-cover{{/if}}">
	<figure class="logo">
		{{#if @site.logo}}<a href="{{@site.url}}"><img class="img-logo" src="{{@site.logo}}" alt="Logo Blog"></a>{{/if}}
	</figure>
	<div class="title">
		<a href="{{@site.url}}">
			<h1>{{@site.title}}</h1>
		</a>
		<p>{{@site.description}}</p>
	</div>
</header>

<section class="posts">

	{{> "loop"}}

</section>
